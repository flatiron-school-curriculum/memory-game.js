<!DOCTYPE html>
<html>
  <head>
    <script src="/javascripts/libraries/jquery.js"></script>
    <script src="/javascripts/libraries/bootstrap.min.js"></script>
    <script src="/javascripts/libraries/jquery-ui.min.js"></script>
    <script src="/javascripts/custom/game-functions.js"></script>
    <script src="/javascripts/custom/game.js"></script>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/custom.css" rel="stylesheet">
    <title>Memory Game</title>
  </head>
  <body>

    <div class="container">

      <div class="row">
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="card-table">
          <table class="table">
            <tr id="top-row"></tr>
            <% 3.times do %>
              <tr id="hole-row">
                <% 3.times do %>
                  <td>
                    <div class="full-width center">
                      <div class="circle hole">
                        <div id="mole-num-<%= @i += 1 %>" class="mole inv">
                          <img src="images/mole.png" class="mole-pic">
                        </div>
                      </div>
                    </div>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </table>
        </div>

        <div class="col-md-2"></div>
      </div>
    </div>

  </body>
</html>
